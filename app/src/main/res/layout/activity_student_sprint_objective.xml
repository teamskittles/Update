<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_student_sprint_objective"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".student_sprint_objective">


    <TextView
        android:id="@+id/sprintObjStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upcoming Sprint Objective"
        android:textStyle="bold"
        android:textSize="@dimen/text_margin"
        android:textColor="#000000"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/sprintObjView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/sprintObjStudent"
        android:layout_marginTop="20dp"
        android:textColor=" #00008b"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/sprintReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sprintObjView"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="@dimen/text_margin"
        android:text="Current Sprint Review from Product Owner" />

    <TextView
        android:id="@+id/sprintReviewView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/sprintReview"
        android:layout_marginTop="20dp"
        android:textColor=" #00008b"
        android:textSize="20sp" />


</RelativeLayout>