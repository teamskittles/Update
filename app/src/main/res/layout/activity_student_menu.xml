<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_student_menu"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".student_menu">




    <Button
        android:id="@+id/buttonProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonSprintObj"
        android:layout_marginTop="50dp"
        android:background="@color/colorPrimary"
        android:textStyle="bold"
        android:onClick="onUserStories"
        android:text="User Stories" />

    <Button
        android:id="@+id/buttonSprintObj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="73dp"
        android:background="@color/colorPrimary"
        android:textStyle="bold"
        android:text="Sprint Objective and Review"
        android:onClick="onSprint"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Student Menu"
        android:textStyle="bold"
        android:textColor="#000000"/>




</RelativeLayout>